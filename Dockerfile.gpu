FROM nvidia/cuda:12.2.2-cudnn8-runtime-ubuntu22.04 AS gpu-base
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update \
 && apt-get install -y --no-install-recommends \
      build-essential \
      ffmpeg \
 && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY requirements.txt .
# ставим PyTorch под CUDA => в requirements прописан torch>=2.0.1+cu12x
RUN pip install --no-cache-dir -r requirements.txt

FROM gpu-base AS gpu-worker
COPY . .
# Не задаём ENTRYPOINT — команда берётся из docker-compose